.wrapper {
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;

  background-color: rgba(0, 0, 0, 0.75);

  .container {
    width: 70%;
    height: fit-content;
    space-between-entries: 15;

    left: 50%;
    top: 50%;

    alignment-x: center;
    alignment-y: center;

    padding: 10;

    .title {
      alignment-x: center;
    }

    .buttonWrapper {

      padding: 10;

      .buttonContainer {
        width: 60%;
        height: fit-content;
        alignment-x: center;
        alignment-y: center;
        layout: fill;
        space-between-entries: 10;

        .submit {
          padding-left: 20;
          padding-right: 20;
        }

        .cancel {
          padding-left: 20;
          padding-right: 20;
        }
      }
    }
  }
}